
<div class="top">
    <div class="budget">
        <div class="budget__title">
            Available Budget in <span class="budget__title--month"><%= @month %></span>:
        </div>
        <div class="budget__value"><%= @total_incomes - @total_expenses %></div>
        <div class="budget__income clearfix">
            <div class="budget__income--text">Income</div>
            <div class="right">
                <div class="budget__income--value">+ <%= @total_incomes %></div>
                <div class="budget__income--percentage">&nbsp;</div>
            </div>
        </div>
        <div class="budget__expenses clearfix">
            <div class="budget__expenses--text">Expenses</div>
            <div class="right clearfix">
                <div class="budget__expenses--value">- <%= @total_expenses %></div>
                <div class="budget__expenses--percentage"><%= @total_percent_exp %>%</div>
            </div>
        </div>
    </div>
</div>
<div class="bottom">
    <div class="add">
      <%= form_for @transaction do |f| %>
         <div class="add__container">
             <%= f.select :operation_type, [['+', 'inc'], ['-', 'exp']] ,{}, { :class => 'add__type' } %>
             <%= f.text_field :description, class:'add__description' %>
             <%= f.number_field :value, class:'add__value' %>
             <%= f.submit "Submit", class:"btn btn-success" %>
             <button class="add__btn"><i class="ion-ios-checkmark-outline"></i></button>
         </div>
       <% end %>
    </div>
    <div class="row">
      <div class="col-md-2">
      </div>
      <div class="col-md-4">
        <div class="income">
            <h2 class="incomes__title">Income</h2>
            <div class="income__list">
              <% @inc_transactions.each do |inc| %>
                <div class="item clearfix" id="income-0">
                    <div class="item__description"><%= inc.description %></div>
                    <div class="right clearfix">
                        <div class="item__value">+ <%= inc.value %></div>
                        <div class="item__delete">
                          <%= button_to  transaction_path(inc), method: :delete, class: "item__delete--btn"  do %>
                            <i class="ion-ios-close-outline"></i>
                          <% end %>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
      </div>
      <div class="col-md-4">
      <div class="expenses">
          <h2 class="expenses__title">Expenses</h2>
          <div class="expenses__list">
            <% @exp_transactions.each do |exp| %>
              <div class="item clearfix" id="expense-0">
                  <div class="item__description"><%= exp.description %></div>
                  <div class="right clearfix">
                      <div class="item__value">- <%= exp.value %></div>
                      <div class="item__percentage"><%= exp.percent_exp(@total_incomes) %>%</div>
                      <div class="item__delete">
                          <%= button_to  transaction_path(exp), method: :delete, class: "item__delete--btn"  do %>
                            <i class="ion-ios-close-outline"></i>
                          <% end %>
                      </div>
                  </div>
              </div>
            <% end %>
          </div>
      </div>
      <div class="col-md-2">
      </div>
    </div>
  </div>
</div>
